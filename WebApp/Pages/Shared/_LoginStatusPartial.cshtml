@if(User.Identity.IsAuthenticated){

    <form method="post" class="form-inline" asp-page="/Account/Logout">
        <span> Welcome @User.Identity.Name| @User.Claims.First(x => x.Type == "Position") </span>
        <button type="submit" class="m-lg-2 btn btn-link">Logout</button>

    </form>
}
else
{
    <a class="btn btn-link" asp-page="/Account/Login">Login</a>
}