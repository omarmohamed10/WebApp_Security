@page
@model WebApp.Pages.Account.LoginModel
@{
}
<div class="container border" style="padding:20px">

    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.Email" class="form-control" />
            </div>
            <span class="text-danger col-5" asp-validation-for="Credential.Email"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credential.Password" class="form-control" />
            </div>
            <span class="text-danger col-5" asp-validation-for="Credential.Password"></span>

        </div>

        <div class="form-group row mb-2">
            <div class="col-2">
                <input type="checkbox" class="form-check-input" asp-for="Credential.RememberMe"  />
                <label class="form-check-label" asp-for="Credential.RememberMe"></label>
            </div>
            <div class="col-5">

            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-5">
                <a class="btn btn-outline-primary btn-link" href="/Account/Register">Sign up</a>
            </div>

        </div>

    </form>

</div>